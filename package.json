{
  "name": "radio-lab",
  "version": "1.0.0",
  "description": "RADIO-LAB Mobile App",
  "scripts": {
    "build": "echo 'No build step needed'",
    "setup": "./setup.sh",
    "postinstall": "echo 'Dependencies installed. Run npm run sync:ios if needed.'",
    "sync": "npx cap sync",
    "sync:ios": "npx cap sync ios",
    "ios": "npx cap open ios",
    "ios:run": "npx cap run ios",
    "clean": "rm -rf node_modules package-lock.json",
    "reinstall": "npm run clean && npm install"
  },
  "engines": {
    "node": ">=20.0.0 <21.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@capacitor/cli": "^5.0.0",
    "@capacitor/core": "^5.0.0",
    "@capacitor/ios": "^5.0.0"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
